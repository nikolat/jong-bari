//******************************************************************************
// OnMahjongResponse
//******************************************************************************
string OnMahjongResponse(dict ref)
{
	string version = ref["Reference0"];
	if (version != getVersion())
		return "";
	string command = ref["Reference1"];
	switch (command)
	{
	case "hello":
		array a = _strsplit(ref["Reference3"], "=");
		string name;
		if (a[0] == "name")
			name = a[1];
		else
			return "";
		if (_aryvn(playerName) >= 3)
			return "";//定員オーバー
		if (ASEARCH(name, playerName) >= 0)
			return "";//同名のキャラが参加済
		playerName += name;
		if (_aryvn(playerName) == 3)
		{
			playerName += "user";
			return showBalloon();
		}
		else
		{
			return "";
		}
		break;
	case "sutehai?":
		string action = ref["Reference2"];
		switch (action)
		{
		case ""://お任せモード
			break;
		case "sutehai":
			reservedSelectedHai = ref["Reference3"];
			break;
		case "richi":
			reservedSelectedHai = ref["Reference3"];
			reservedRichi = 1;
			break;
		case "tsumo":
			reservedTsumo = 1;
			break;
		case "kakan":
			reservedSelectedHai = ref["Reference3"];
			reservedKakan = 1;
			break;
		case "ankan":
			reservedSelectedHai = ref["Reference3"];
			reservedAnkan = 1;
			break;
		default:
			break;
		}
		isRecievedResponse = 1;
		break;
	case "naku?":
		string name = ref["Sender"];
		reservedNaku[name] = {ref["Reference2"], ref["Reference3"], ref["Reference4"]};
		dResponseNeed[name] = 0;
		int count = 0;
		for (int i = 0; i < 3; i++)
		{
			count += dResponseNeed[playerName[i]];
		}
		if (count == 0)
			isRecievedResponse = 1;
		break;
	case "tenpai?":
		string action = ref["Reference2"];
		string name = ref["Sender"];
		reservedTenpai[name] = action;
		dResponseNeed[name] = 0;
		int count = 0;
		for (int i = 0; i < 3; i++)
		{
			count += dResponseNeed[playerName[i]];
		}
		if (count == 0)
			isRecievedResponse = 1;
		break;
	default:
		break;
	}
	return "";
}

TH_WaitResponse()
{
	double wait = 0.125;
	int nLoop = 8;
	for (int i = 0; i < nLoop; i++)
	{
		if (isSoloMode)
			break;
		_sleep(wait);
		if (isRecievedResponse)
		{
			isRecievedResponse = 0;
			break;
		}
	}
	string s = reservedScript;
	reservedScript = "";
	_speak(s);
}

string getVersion()
{
	return "UKAJONG/0.2";
}

//******************************************************************************
// 表示
