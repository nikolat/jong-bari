			//ツモ通知
			s += "\![raiseother," + playerName[selectPlayer] + ",OnMahjong," + getVersion()
				+ ",tsumo," + playerName[selectPlayer] + "," + getLeftYama() + "," + tsumo + "]";
			//dora通知
