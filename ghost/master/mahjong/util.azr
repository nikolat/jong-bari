	if (canRon(3, sute) || canPon(3, sute) || (selectPlayer + 1 == 3) && canChi(3, sute))
		s += "\x[noclear]";
	isRecievedResponse = 1;
	for (int i = 0; playerName[i] != nil; i++)
	{
		if (i != selectPlayer)
		{
			array command = {};
			if (canRon(i, sute))
				command += "ron";
			if (canPon(i, sute))
				command += "pon";
			if (selectPlayer + 1 == i && canChi(i, sute))
				command += "chi";
			if (canDaiminkan(i, sute))
				command += "kan";
			if (_aryvn(command) > 0)
			{
				//鳴くか問い合わせ
