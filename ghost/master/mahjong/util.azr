		}
		if (canDaiminkan(pUser, sute))
			s += "\![*]\__q[Menu_Daiminkan,3," + nPlayer + "," + sute + "]カン\__q";
	}
	s += "\![*]\__q[Menu_CANCEL]閉じる\__q";
	return s;
}

