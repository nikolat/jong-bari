					s += " \__q[Menu_Kakan," + arKakanHai[i] + "]\f[height,+16]" + convertUnicode(arKakanHai[i]) + "\f[height,default]\__q";
				}
			}
		}
		if (canAnkan(pUser, tsumo))
		{
			array arAnkanHai = getAnkanHai(addHai(arTehai[pUser], tsumo));
